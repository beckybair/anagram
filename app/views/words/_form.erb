<form id="start" action="<%= words_form_action(@word) %>" method="post" id="<%= words_form_id(@word) %>" class="<%= words_form_class(@word) %>">
  <input type="hidden" name="_method" value="<%= words_form_method(@word) %>" />
  
  <div class="inputs">
    <label for="text">Enter Word:</label>
    <input type="text" name="text" value="<%= @word.text %>" />
   
    <input class="button" type="submit" />
  </div>
</form>
